<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         metadata-complete="true">

	<display-name>Station</display-name>
	
	<listener>
		<listener-class>ca.datamagic.station.servlet.StationContextListener</listener-class>
	</listener>

	<servlet>
        <servlet-name>Cache</servlet-name>
        <servlet-class>ca.datamagic.station.servlet.CacheServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListStations</servlet-name>
        <servlet-class>ca.datamagic.station.servlet.ListStationsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadStation</servlet-name>
        <servlet-class>ca.datamagic.station.servlet.ReadStationServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>SwaggerUI</servlet-name>
        <servlet-class>ca.datamagic.station.servlet.SwaggerUIServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>SwaggerResources</servlet-name>
        <servlet-class>ca.datamagic.station.servlet.SwaggerResourcesServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>SwaggerAPI</servlet-name>
        <servlet-class>ca.datamagic.station.servlet.SwaggerAPIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cache</servlet-name>
        <url-pattern>/api/cache</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListStations</servlet-name>
        <url-pattern>/api/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadStation</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerUI</servlet-name>
        <url-pattern>/swagger-resources/configuration/ui</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerResources</servlet-name>
        <url-pattern>/swagger-resources</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerAPI</servlet-name>
        <url-pattern>/v2/api-docs</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>swagger-ui.html</welcome-file>
    </welcome-file-list>
</web-app>

